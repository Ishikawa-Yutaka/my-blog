<style>
	/* ヒーローセクション (NEW) */
.hero {
    padding: 40px 0;
    text-align: center;
}
.hero h1 {
    font-size: 1.5rem;
    margin-bottom: 30px;
}
.hero-article {
    position: relative;
    border: 1px solid var(--border-color);
    background: var(--light-gray);
}
.hero-article .new-badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background-color: var(--accent-color);
    color: var(--text-color);
    padding: 5px 10px;
    font-size: 0.9rem;
    font-weight: bold;
}
.hero-content {
     padding: 20px;
     text-align: left;
}
.hero-content .category {
    font-weight: bold;
}
.hero-content .date {
    color: #777;
    margin-left: 10px;
}
.hero-content h2 {
    font-size: 1.2rem;
    margin: 10px 0;
}
 .btn-container {
    margin-top: 30px;
}


/* 記事セクション */
.category-section {
    padding: 40px 0;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2px solid var(--text-color);
    padding-bottom: 10px;
    margin-bottom: 30px;
}

.section-header h2 {
    margin: 0;
    font-size: 1.5rem;
}

/* CSS GRID を使用した記事一覧 */
.article-grid {
    display: grid;
    /* 画面幅に応じて列数を自動調整 */
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 25px;
}

.article-card {
    border: 1px solid var(--border-color);
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.article-card img {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    background-color: var(--light-gray);
}

.article-card-content {
    padding: 15px;
    flex-grow: 1; /* 内容が少なくても高さを揃える */
}

.article-card-content .meta {
    font-size: 0.9rem;
    color: #555;
    margin-bottom: 5px;
}
.article-card-content .category{
    font-weight: bold;
}
.article-card-content h3 {
    font-size: 1rem;
    margin: 0;
    font-weight: normal;
}

.view-all-link {
    text-align: right;
    margin-top: 20px;
}

/* ボタン共通スタイル */
.btn {
    display: inline-block;
    background-color: var(--text-color);
    color: white;
    padding: 12px 30px;
    border-radius: 5px;
    transition: background-color 0.3s;
}
.btn:hover {
    background-color: #555;
}
</style>