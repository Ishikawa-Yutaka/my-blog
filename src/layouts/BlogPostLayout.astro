<style>
/* style.css にこの部分を追記 */

/* ===============================================
   ブログ詳細ページ用のスタイル
   =============================================== */

/* ヘッダー */
.site-header .header-top {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 10px;
  padding-bottom: 15px;
}
.site-header .page-title {
  margin: 0;
  font-size: 2rem;
}
.site-header .breadcrumbs {
  margin: 0;
  font-size: 1rem;
  color: #777;
}
.site-header .global-nav {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  padding-top: 15px;
  border-top: 1px solid var(--border-color);
}
.site-header .global-nav a {
  color: var(--main-color);
  text-decoration: none;
}

/* 記事本体 */
.blog-post {
  max-width: 800px; /* 記事エリアの最大幅を少し狭くして読みやすくする */
  margin-top: 40px;
  margin-bottom: 40px;
}

.post-header {
  text-align: center;
  margin-bottom: 40px;
}
.post-header img {
  width: 100%;
  max-width: 600px;
  margin: 0 auto;
  height: auto;
  object-fit: cover;
  margin-bottom: 20px;
}
.post-title {
  font-size: 2.5rem;
  font-weight: 400;
  margin: 0 0 10px 0;
  line-height: 1.5;
  font-family: 'IBM Plex Sans JP', sans-serif;
  letter-spacing: 0.01em;
}
.post-date {
    color: var(--text-color);
    font-size: 1.5rem;
    font-weight: 200;
    text-align: right;
    display: inline-block;
    width: 100%;
    max-width: 600px;
    margin-bottom: 0.5em;
    letter-spacing: 0.04em;
}

.post-content {
  font-size: 1.1rem;
  line-height: 1.8;
}
.post-content h2 {
  font-size: 1.6rem;
  font-family: 'IBM Plex Sans JP', sans-serif;
  margin-top: 60px;
  margin-bottom: 20px;
  padding-bottom: 10px;
  border-bottom: 2px solid var(--border-color);
}
.post-content p {
  margin: 0 0 20px 0;
}
.post-content figure {
  margin: 40px 0;
}
.post-content figcaption {
  text-align: center;
  font-size: 0.9rem;
  color: #777;
  margin-top: 10px;
}
.post-content img {
  border-radius: 5px;
}

/* 記事下のナビゲーション */
.post-navigation {
  margin-top: 60px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15px;
}
.post-navigation a {
  display: block;
  padding: 10px 20px;
  border: 1px solid var(--border-color);
  border-radius: 5px;
  color: var(--main-color);
  text-decoration: none;
  transition: background-color 0.2s;
}
.post-navigation a:hover {
  background-color: var(--light-gray);
}

/* レスポンシブ調整（ブログ詳細ページ） */
@media (max-width: 768px) {
  /* .post-title {
    font-size: 1.8rem;
  } */
  .post-content {
    font-size: 1rem;
  }
  .post-content h2 {
    font-size: 1.4rem;
  }
}







