<style>
/* style.css にこの部分を追記 */

/* ===============================================
   ブログ詳細ページ用のスタイル
   =============================================== */

.category-info {
  font-size: 2.5rem;
  font-weight: 100;
  letter-spacing: 0.04em;
  color: var(--text-color);
  display: inline-block;
  margin-bottom: 0.5em;
  position: fixed;
  top: 87px;
  left: 4vw;
  z-index: 10000;
  background-color: rgba(255, 255, 255, 0.3); 
  /* 背景を10px分ぼかす */
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px); /* Safari向けのベンダープレフィックス */
}

.category-info::first-letter{
  font-size: 3rem;
  color: var(--category-web);
}

/* カテゴリー別の色分け */
.category-info[data-category="web"]::first-letter {
  color: var(--category-web);
}

.category-info[data-category="photo"]::first-letter {
  color: var(--category-photo);
}

.category-info[data-category="stroll"]::first-letter {
  color: var(--category-stroll);
}

.category-info[data-category="succulent"]::first-letter {
  color: var(--category-succulent);
}

.category-info span {
  font-size: 1.3rem;
  vertical-align: middle;
  margin-left: 0.5em;
}

/* 記事本体 */
.header-wrapper{
  background-color: var(--main-color);
  padding: 15px 0 20px;
  margin-top: 80px;
}

.post-header {
  text-align: center;
}
.post-content{
  text-align: left;
}
.post-header,.post-content {
  max-width: 800px; /* 記事エリアの最大幅を少し狭くして読みやすくする */
  margin: 40px auto;
  padding: 0 4vw;
}

.post-header .post-eyecatch {
  width: 100%;
  max-width: 700px;
  margin: 0 auto;
  height: auto;
  object-fit: cover;
  margin-bottom: 20px;
}
.post-title {
  font-size: clamp(2rem, 6vw, 3rem);
  font-weight: 400;
  margin: 0 0 10px 0;
  line-height: 1.5;
  font-family: 'IBM Plex Sans JP', sans-serif;
  letter-spacing: 0.01em;
}
.post-date {
    color: var(--text-color);
    font-size: 1.5rem;
    font-weight: 200;
    text-align: right;
    display: inline-block;
    width: 100%;
    max-width: 700px;
    margin-bottom: 0.5em;
    letter-spacing: 0.04em;
}

.post-content {
  font-size: 1.6rem;
  line-height: 1.8;
  text-indent: 1em;
  letter-spacing: 0.02em;
}


.post-content p {
  margin: 0 0 20px 0;
  font-weight:400;
}
.post-content figure {
  margin: 40px 0;
}

.post-content figure img {
  width: 90%;
  max-width: 600px;
  margin: 0 auto;
  height: auto;
  object-fit: cover;
  margin-bottom: 20px;
  border-radius: 10px;
}
.post-content figcaption {
  text-align: center;
  font-size: 1.2rem;
  color: var(--text-color);
  margin-top: 0.1em;
}

/* 記事下のナビゲーション */
.post-navigation {
  margin-top: 60px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15px;
}
.post-navigation a {
  display: block;
  padding: 10px 20px;
  border: 1px solid var(--border-color);
  border-radius: 5px;
  color: var(--main-color);
  text-decoration: none;
  transition: background-color 0.2s;
}
.post-navigation a:hover {
  background-color: var(--light-gray);
}

/* レスポンシブ調整（ブログ詳細ページ） */
@media (max-width: 768px) {
  /* .post-title {
    font-size: 1.8rem;
  } */
  .post-content {
    font-size: 1.5rem;
  }

  .post-content h2 {
    font-size: 1.9rem;
  }
.post-content h2::before{
  top: 4px;
 }

}







